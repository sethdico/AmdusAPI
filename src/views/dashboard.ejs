<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= config.app.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #09090b; color: #e4e4e7; }
        .font-mono { font-family: 'JetBrains Mono', monospace; }
        .glass { background: rgba(39, 39, 42, 0.4); backdrop-filter: blur(12px); border: 1px solid rgba(255, 255, 255, 0.08); }
        .glass:hover { border-color: rgba(34, 197, 94, 0.5); }
    </style>
</head>
<body>
    <nav class="border-b border-white/10 sticky top-0 z-50 bg-[#09090b]/80 backdrop-blur-md">
        <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
            <div class="flex items-center gap-2">
                <div class="w-3 h-8 bg-green-500 rounded-full"></div>
                <h1 class="text-xl font-bold tracking-tight"><%= config.app.name %></h1>
            </div>
            <div class="text-xs text-gray-500 font-mono">v<%= config.app.version %></div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-6 py-10">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10">
            <div class="glass p-6 rounded-xl">
                <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Active Endpoints</p>
                <p class="text-3xl font-bold text-white mt-1"><%= commands.length %></p>
            </div>
            <div class="glass p-6 rounded-xl">
                <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">Total Categories</p>
                <p class="text-3xl font-bold text-white mt-1"><%= Object.keys(categories).length %></p>
            </div>
            <div class="glass p-6 rounded-xl">
                <p class="text-gray-400 text-xs uppercase font-bold tracking-wider">System Status</p>
                <div class="flex items-center gap-2 mt-2">
                    <span class="relative flex h-3 w-3">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
                    </span>
                    <span class="text-green-500 font-bold text-sm">Operational</span>
                </div>
            </div>
        </div>

        <div class="mb-8">
            <input type="text" id="searchInput" placeholder="Search API endpoints..." 
                class="w-full bg-[#18181b] border border-white/10 text-white px-5 py-4 rounded-xl focus:outline-none focus:border-green-500 transition font-mono text-sm">
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6" id="apiGrid">
            <% for (let cat in categories) { %>
                <% categories[cat].forEach(cmd => { %>
                    <div class="glass p-6 rounded-xl group api-card" data-name="<%= cmd.name.toLowerCase() %> <%= cat.toLowerCase() %>">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h3 class="font-bold text-lg text-gray-100 group-hover:text-green-400 transition"><%= cmd.name %></h3>
                                <p class="text-sm text-gray-500 mt-1 line-clamp-2"><%= cmd.description %></p>
                            </div>
                            <span class="text-[10px] font-bold uppercase tracking-wider bg-white/5 px-2 py-1 rounded text-gray-400 border border-white/5"><%= cat %></span>
                        </div>

                        <div class="flex flex-wrap gap-2 mb-4">
                            <% if(cmd.params.length > 0) { %>
                                <% cmd.params.forEach(p => { %>
                                    <span class="text-xs bg-[#18181b] text-gray-400 px-2 py-1 rounded font-mono border border-white/5">
                                        ?<%= p.name %><span class="text-gray-600">=<%= p.type %></span>
                                    </span>
                                <% }) %>
                            <% } else { %>
                                <span class="text-xs text-gray-600 italic">No parameters required</span>
                            <% } %>
                        </div>

                        <div class="flex items-center gap-2 bg-[#18181b] p-1.5 rounded-lg border border-white/5">
                            <code class="text-xs text-green-500 font-mono px-2 flex-1 truncate" id="url-<%= cmd.name.replace(/\s/g, '') %>"><%= cmd.path %></code>
                            
                            <button onclick="copyPath('<%= cmd.path %>')" class="p-2 hover:bg-white/10 rounded-md transition" title="Copy URL">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
                            </button>
                            
                            <a href="<%= cmd.path %>?q=test" target="_blank" class="p-2 hover:bg-white/10 rounded-md transition" title="Test Endpoint">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400 group-hover:text-green-400"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <script>
        document.getElementById('searchInput').addEventListener('keyup', function(e) {
            const term = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.api-card');
            
            cards.forEach(card => {
                const name = card.getAttribute('data-name');
                card.style.display = name.includes(term) ? 'block' : 'none';
            });
        });

        function copyPath(path) {
            const url = window.location.origin + path;
            navigator.clipboard.writeText(url);
            alert('Copied: ' + url);
        }
    </script>
</body>
</html>
